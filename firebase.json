// Arquivo: firebase.json
{
  "hosting": {
    // ğŸ’¡ Defina 'public' para o diretÃ³rio de SAÃDA do seu build (dist, build, etc.)
    "public": "dist", 
    
    // Lista de arquivos a ignorar no upload
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    
    // Essencial para permitir o roteamento de URL no lado do cliente (React Router)
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
